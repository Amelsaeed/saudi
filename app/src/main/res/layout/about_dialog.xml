<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/splashbackground"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="250dp">

    <ImageView
        android:layout_width="700dp"
        android:layout_height="100dp"
        android:id="@+id/cl_logo"
        android:src="@drawable/tmycliniclogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        />
   <TextView
       android:layout_width="700dp"
       android:layout_height="wrap_content"
       android:id="@+id/cl_name"
       android:gravity="center"
       android:text="@string/app_name"
       android:textSize="24sp"
       android:layout_below="@id/cl_logo"
       android:textColor="@android:color/black"
       android:layout_centerHorizontal="true"
       />
  <TextView
      android:gravity="center"
      android:layout_width="700dp"
      android:layout_height="wrap_content"
      android:id="@+id/cl_version"
      android:layout_below="@id/cl_name"
      android:layout_centerHorizontal="true"
      android:text="@string/app_version"
      />
    <TextView
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:id="@+id/about_cancel"
        android:text="Cancel"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_below="@id/cl_version"
        android:padding="8dp"
       android:layout_margin="16dp"

        />

</RelativeLayout>