<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/heder_menu"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/your_account_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/roundwhite"

            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="Book for your account"
            android:textSize="16sp" />

        <TextView

            android:id="@+id/another_acount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundwhite"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="Book for another acount"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/not_acount_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/roundwhite"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="I don't have account yet"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dismiss_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:gravity="right"
            android:padding="8dp"
            android:text="Cancel"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>