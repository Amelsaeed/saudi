<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/heder_menu"
        android:orientation="vertical">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/full_name_tv"
    android:text="@string/full_name"
    android:textSize="16sp"
    android:textColor="@color/colorPrimaryDark"
    android:textStyle="bold"
    android:layout_alignParentTop="true"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    />
    <EditText
        android:id="@+id/pat_name_et"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_margin="8dp"
        android:background="@drawable/white_rect"
        android:hint="@string/full_name"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/full_name_tv"
        android:padding="8dp"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/age_tv"
        android:text="@string/age"
        android:textSize="16sp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_below="@id/pat_name_et"
        />

    <EditText
        android:id="@+id/pat_age_et"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_margin="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/white_rect"
        android:hint="@string/age"
        android:inputType="number"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:layout_below="@id/age_tv"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/error_msg_tv"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/pat_age_et"
        android:textColor="#ea3232"
        android:textSize="16sp"
        android:text=""
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/error_msg_tv"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:layout_weight="1"
            android:id="@+id/canc_tv"
            android:padding="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="right"
            android:textColor="@color/colorAccent"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/sub_tv"
            android:text="@string/submit"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="16sp"
            android:gravity="right"
            android:textColor="@color/colorAccent"
            />
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>