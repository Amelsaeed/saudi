<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"

            android:text="Enter your data"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_title"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"

            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:text="Detection time:"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginRight="5dp"
               android:layout_marginLeft="5dp"

               android:layout_marginBottom="15dp"
               android:orientation="horizontal">

               <TextView

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="8dp"
                   android:layout_marginLeft="16dp"
                   android:layout_marginRight="8dp"
                   android:text="From:"
                   android:textColor="@android:color/black"
                   android:textSize="16sp" />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="5dp"
                   android:layout_marginLeft="5dp"
                   android:background="@drawable/roundwhite"
                   android:layout_marginBottom="0dp"
                   android:orientation="horizontal">

                   <ImageView
                       android:id="@+id/timer"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginBottom="8dp"
                       android:layout_marginLeft="16dp"
                       android:layout_marginRight="8dp"
                       android:src="@drawable/ic_timer"
                       android:gravity="center_vertical"
                       />

                   <EditText
                       android:id="@+id/start_time"

                       android:layout_width="0dp"
                       android:layout_height="50dp"
                       android:layout_weight="1"
                       android:layout_marginRight="5dp"
                       android:gravity="center"
                       android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                       android:textColor="#000"
                       android:hint="Starting time"
                       android:enabled="false"
                       />



               </LinearLayout>



           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginRight="5dp"
               android:layout_marginLeft="5dp"

               android:layout_marginBottom="15dp"
               android:orientation="horizontal">


               <TextView

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="8dp"
                   android:layout_marginLeft="16dp"
                   android:layout_marginRight="8dp"
                   android:text="To:   "
                   android:textColor="@android:color/black"
                   android:textSize="16sp" />
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="5dp"
                   android:layout_marginLeft="5dp"
                   android:background="@drawable/roundwhite"
                   android:layout_marginBottom="0dp"
                   android:orientation="horizontal">

                   <ImageView
                       android:id="@+id/timer_off"

                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginBottom="8dp"
                       android:layout_marginLeft="16dp"
                       android:layout_marginRight="8dp"
                       android:src="@drawable/ic_timer_off"
                       android:gravity="center_vertical"
                       />

                   <EditText
                       android:id="@+id/ending_time"
                       android:layout_width="0dp"
                       android:layout_height="50dp"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                       android:textColor="#000"
                       android:layout_marginRight="5dp"
                       android:layout_marginLeft="5dp"
                       android:hint="Ending  time"
                       android:enabled="false"
                       />


               </LinearLayout>


           </LinearLayout>

           <EditText
               android:id="@+id/dialog_address"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:hint="Address"
               android:background="@drawable/roundwhite"
               android:layout_gravity="center"
               android:layout_marginRight="15dp"
               android:layout_marginLeft="15dp"
               android:layout_marginTop="5dp"
               android:maxLines="1"
               android:paddingLeft="30dp"
               android:paddingRight="30dp"
               android:inputType="textPostalAddress"
               android:textColor="#000"
               android:textColorHint="#000000"
               android:textSize="13dp"
                android:enabled="false"
               />
           <TextView

               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="8dp"
               android:layout_marginLeft="25dp"
               android:layout_marginRight="8dp"
               android:text="* Be sure GPS is opened"
               android:textColor="@android:color/holo_red_dark"
               android:textSize="16sp" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginRight="5dp"
               android:layout_marginLeft="5dp"
               android:layout_marginTop="15dp"

               android:orientation="horizontal">

               <CheckBox
                   android:id="@+id/sat"
                   android:button="@drawable/cal_checkbox_selector"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                   android:textColor="#000"
                   android:text="s"/>

               <CheckBox
                   android:id="@+id/sun"
                   android:button="@drawable/cal_checkbox_selector"

                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                   android:textColor="#000"
                   android:text="s"/>
               <CheckBox
                   android:id="@+id/mon"
                   android:button="@drawable/cal_checkbox_selector"

                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                   android:textColor="#000"
                   android:text="m"/>
               <CheckBox
                   android:id="@+id/tus"
                   android:button="@drawable/cal_checkbox_selector"

                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                   android:textColor="#000"
                   android:text="t"/>
               <CheckBox
                   android:id="@+id/wed"
                   android:button="@drawable/cal_checkbox_selector"

                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                   android:textColor="#000"
                   android:text="w"/>
               <CheckBox
                   android:id="@+id/thu"
                   android:button="@drawable/cal_checkbox_selector"

                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                   android:textColor="#000"
                   android:text="t"/>
               <CheckBox
                   android:id="@+id/fri"
                   android:button="@drawable/cal_checkbox_selector"

                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                   android:textColor="#000"
                   android:text="f"/>

           </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel_tv_e"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Cancel"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/submit_tv_e"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Submit"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>