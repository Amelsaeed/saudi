<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">

       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"

            android:text="Enter your data"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_title"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"

            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:text="Detection time:"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginRight="5dp"
               android:layout_marginLeft="5dp"

               android:layout_marginBottom="15dp"
               android:orientation="horizontal">

               <TextView

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="8dp"
                   android:layout_marginLeft="16dp"
                   android:layout_marginRight="8dp"
                   android:text="From:"
                   android:textColor="@android:color/black"
                   android:textSize="16sp" />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="5dp"
                   android:layout_marginLeft="5dp"
                   android:background="@drawable/roundwhite"
                   android:layout_marginBottom="0dp"
                   android:orientation="horizontal">

                   <ImageView
                       android:id="@+id/timer"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginBottom="8dp"
                       android:layout_marginLeft="16dp"
                       android:layout_marginRight="8dp"
                       android:src="@drawable/ic_timer"
                       android:gravity="center_vertical"
                       />

                   <EditText
                       android:id="@+id/start_time"

                       android:layout_width="0dp"
                       android:layout_height="50dp"
                       android:layout_weight="1"
                       android:layout_marginRight="5dp"
                       android:gravity="center"
                       android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                       android:textColor="#000"
                       android:hint="Starting time"
                       android:enabled="false"
                       />



               </LinearLayout>



           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginRight="5dp"
               android:layout_marginLeft="5dp"

               android:layout_marginBottom="15dp"
               android:orientation="horizontal">


               <TextView

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="8dp"
                   android:layout_marginLeft="16dp"
                   android:layout_marginRight="8dp"
                   android:text="To:   "
                   android:textColor="@android:color/black"
                   android:textSize="16sp" />
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="5dp"
                   android:layout_marginLeft="5dp"
                   android:background="@drawable/roundwhite"
                   android:layout_marginBottom="0dp"
                   android:orientation="horizontal">

                   <ImageView
                       android:id="@+id/timer_off"

                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginBottom="8dp"
                       android:layout_marginLeft="16dp"
                       android:layout_marginRight="8dp"
                       android:src="@drawable/ic_timer_off"
                       android:gravity="center_vertical"
                       />

                   <EditText
                       android:id="@+id/ending_time"
                       android:layout_width="0dp"
                       android:layout_height="50dp"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                       android:textColor="#000"
                       android:layout_marginRight="5dp"
                       android:layout_marginLeft="5dp"
                       android:hint="Ending  time"
                       android:enabled="false"
                       />


               </LinearLayout>


           </LinearLayout>

           <EditText
               android:id="@+id/dialog_address"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:hint="Address"
               android:background="@drawable/roundwhite"
               android:layout_gravity="center"
               android:layout_marginRight="15dp"
               android:layout_marginLeft="15dp"
               android:layout_marginTop="5dp"
               android:maxLines="1"
               android:paddingLeft="30dp"
               android:paddingRight="30dp"
               android:inputType="textPostalAddress"
               android:textColor="#000"
               android:textColorHint="#000000"
               android:textSize="13dp"
                android:enabled="false"
               />
           <TextView

               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="8dp"
               android:layout_marginLeft="25dp"
               android:layout_marginRight="8dp"
               android:text="* Be sure GPS is opened or press Refresh"
               android:textColor="@android:color/holo_red_dark"
               android:textSize="12sp" />
           <LinearLayout
               android:id="@+id/mainGrid_dialog"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginRight="5dp"
               android:layout_marginLeft="5dp"
               android:layout_marginTop="15dp"
               >
               <!-- Row 1 -->
               <!-- android:columnCount="7"
                    android:rowCount="1"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false" -->
               <!-- Column 1 -->
               <android.support.v7.widget.CardView
                   android:id="@+id/sat"
                   android:layout_width="0dp"
                   android:layout_height="20dp"
                   android:layout_weight="1"
                   android:layout_marginBottom="16dp"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   app:cardElevation="8dp"
                   app:cardCornerRadius="8dp"
                   android:gravity="center"

                   >



                   <TextView
                       android:id="@+id/sat_text"

                       android:text="Sat"
                       android:textAlignment="center"
                       android:textColor="@android:color/black"
                       android:textSize="10sp"
                       android:textStyle="bold"
                       android:gravity="center"
                       android:layout_gravity="center"

                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />


               </android.support.v7.widget.CardView>

               <!-- Column 2 -->
               <android.support.v7.widget.CardView
                   android:id="@+id/sun"
                   android:layout_width="0dp"
                   android:layout_height="20dp"
                   android:layout_weight="1"
                   android:layout_marginBottom="16dp"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   app:cardElevation="8dp"
                   app:cardCornerRadius="8dp"
                   android:gravity="center"
                   >



                   <TextView
                       android:id="@+id/sun_text"
                       android:text="Sun"
                       android:textAlignment="center"
                       android:textColor="@android:color/black"
                       android:textSize="10sp"
                       android:textStyle="bold"
                       android:gravity="center"
                       android:layout_gravity="center"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />

               </android.support.v7.widget.CardView>

               <!-- Column 3 -->
               <android.support.v7.widget.CardView
                   android:id="@+id/mon"
                   android:layout_width="0dp"
                   android:layout_height="20dp"
                   android:layout_weight="1"
                   android:layout_marginBottom="16dp"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   app:cardElevation="8dp"
                   app:cardCornerRadius="8dp"
                   android:gravity="center"
                   >


                   <TextView
                       android:id="@+id/mon_text"

                       android:text="Mon"
                       android:textAlignment="center"
                       android:textColor="@android:color/black"
                       android:textSize="10sp"
                       android:textStyle="bold"
                       android:gravity="center"
                       android:layout_gravity="center"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />


               </android.support.v7.widget.CardView>

               <!-- Column 4 -->

               <android.support.v7.widget.CardView
                   android:id="@+id/tus"
                   android:layout_width="0dp"
                   android:layout_height="20dp"
                   android:layout_weight="1"
                   android:layout_marginBottom="16dp"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   app:cardElevation="8dp"
                   app:cardCornerRadius="8dp"
                   android:gravity="center"
                   >



                   <TextView
                       android:id="@+id/tus_text"

                       android:text="Tus"
                       android:textAlignment="center"
                       android:textColor="@android:color/black"
                       android:textSize="10sp"
                       android:textStyle="bold"
                       android:gravity="center"
                       android:layout_gravity="center"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />


               </android.support.v7.widget.CardView>

               <!-- Column 5 -->

               <android.support.v7.widget.CardView
                   android:id="@+id/wed"

                   android:layout_width="0dp"
                   android:layout_height="20dp"
                   android:layout_weight="1"
                   android:layout_marginBottom="16dp"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   app:cardElevation="8dp"
                   app:cardCornerRadius="8dp"
                   android:gravity="center"
                   >



                   <TextView
                       android:id="@+id/wed_text"

                       android:text="Wed"
                       android:textAlignment="center"
                       android:textColor="@android:color/black"
                       android:textSize="10sp"
                       android:textStyle="bold"
                       android:gravity="center"
                       android:layout_gravity="center"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />


               </android.support.v7.widget.CardView>
               <!-- Column 6 -->

               <android.support.v7.widget.CardView
                   android:id="@+id/thu"

                   android:layout_width="0dp"
                   android:layout_height="20dp"
                   android:layout_weight="1"
                   android:layout_marginBottom="16dp"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   app:cardElevation="8dp"
                   app:cardCornerRadius="8dp"
                   android:gravity="center"
                   >


                   <TextView
                       android:id="@+id/thu_text"

                       android:text="Thu"
                       android:textAlignment="center"
                       android:textColor="@android:color/black"
                       android:textSize="10sp"
                       android:textStyle="bold"
                       android:gravity="center"
                       android:layout_gravity="center"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />


               </android.support.v7.widget.CardView>
               <!-- Column 7 -->

               <android.support.v7.widget.CardView
                   android:id="@+id/fri"
                   android:layout_width="0dp"
                   android:layout_height="20dp"
                   android:layout_weight="1"
                   android:layout_marginBottom="16dp"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   app:cardElevation="8dp"
                   app:cardCornerRadius="8dp"
                   android:gravity="center"
                   >

                   <TextView
                       android:id="@+id/fri_text"

                       android:text="Fri"
                       android:textAlignment="center"
                       android:textColor="@android:color/black"
                       android:textSize="10sp"
                       android:textStyle="bold"
                       android:gravity="center"
                       android:layout_gravity="center"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />

               </android.support.v7.widget.CardView>
           </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel_tv_e"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Cancel"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/refresh_tv_e"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Refresh"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/submit_tv_e"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Submit"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>