<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashbackground"
    tools:context="com.example.ahmedmagdy.theclinic.activities.DoctorProfileActivity">

    <ImageView
        android:id="@+id/edit_photo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/doctor_logo_m" />

    <TextView
        android:id="@+id/pname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_photo"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:paddingLeft="10dp"
        android:text="User"

        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="#000"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/name_edit"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/ic_edit"
        android:layout_marginLeft="8dp"
        android:scaleType="center"
        android:background="@drawable/button_round_blue"
        android:layout_toRightOf="@id/pname"
        android:visibility="gone"
        android:layout_below="@id/edit_photo"

        />

    <TextView
        android:id="@+id/doctor_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pname"
        android:visibility="gone"
        android:padding="8dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/white_rect"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/doc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_round_blue"
        android:onClick="chat"
        android:text="chat"
        android:visibility="gone" />

    <Button
        android:id="@+id/working_hours_btn"
        android:layout_width="144dp"
        android:layout_height="34dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/gradient_rect_button"
        android:text="Working hours"
        android:textAllCaps="false"
        android:textColor="@android:color/black" />
    <Button
        android:id="@+id/phone_btn"
        android:layout_width="145dp"
        android:layout_height="34dp"
         android:background="@drawable/gradient_rect_button"
        android:layout_above="@id/working_hours_btn"
        android:layout_margin="16dp"
        android:text="Call"
        android:textColor="@android:color/black" />
    <Button
        android:id="@+id/confim_loc_btn"
        android:layout_width="145dp"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="18dp"
        android:layout_toRightOf="@id/working_hours_btn"
        android:background="@drawable/gradient_rect_button"
        android:text="Confirm Location"
        android:textAllCaps="false"
        android:textColor="@android:color/black" />


    <ProgressBar
        android:id="@+id/progressbar_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <ScrollView
        android:layout_below="@id/doctor_email_tv"
        android:layout_above="@id/working_hours_btn"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="8dp"
              >
    <TextView
        android:id="@+id/price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/white_rect"
        android:padding="8dp"
        android:text="Detection Price"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="#000" />
    <TextView
        android:id="@+id/pprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:layout_toRightOf="@id/price_tv"
        android:background="#3ACCE1"
        android:padding="8dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="#000" />
    <ImageView
        android:id="@+id/price_edit"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:srcCompat="@drawable/ic_edit"
        android:scaleType="center"
        android:visibility="gone"
        android:layout_toRightOf="@id/pprice"
        android:background="@drawable/button_round_blue"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/city_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/price_tv"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/white_rect"
        android:padding="8dp"
        android:text="State/ City"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="#000" />

    <TextView
        android:id="@+id/ppcity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pprice"
        android:layout_toRightOf="@id/city_tv"
        android:background="#3ACCE1"
        android:maxLines="1"
        android:padding="8dp"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="#000" />
    <ImageView
        android:id="@+id/city_edit"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:srcCompat="@drawable/ic_edit"
        android:scaleType="center"
        android:background="@drawable/button_round_blue"
        android:layout_marginLeft="8dp"
        android:visibility="gone"
        android:layout_toRightOf="@id/ppcity"
        android:layout_below="@id/price_edit"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:id="@+id/speciality_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/city_tv"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/white_rect"
        android:padding="8dp"
        android:text="Speciality"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="#000" />

    <TextView
        android:id="@+id/pspeciality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#3ACCE1"
        android:maxLines="1"
        android:padding="8dp"
        android:layout_below="@id/ppcity"
        android:layout_toRightOf="@id/speciality_tv"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="#000" />
    <ImageView
        android:id="@+id/speciality_edit"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:srcCompat="@drawable/ic_edit"
        android:scaleType="center"
        android:background="@drawable/button_round_blue"
        android:layout_marginLeft="8dp"
        android:visibility="gone"
        android:layout_toRightOf="@id/pspeciality"
        android:layout_below="@id/city_tv"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:id="@+id/degree_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/speciality_tv"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/white_rect"
        android:padding="8dp"
        android:text="Degree"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="#000" />
    <TextView
        android:id="@+id/pdegree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#3ACCE1"
        android:maxLines="1"
        android:layout_below="@id/speciality_tv"
        android:layout_toRightOf="@id/degree_tv"
        android:padding="8dp"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="#000"
        />
    <ImageView
        android:id="@+id/degree_edit"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:srcCompat="@drawable/ic_edit"
        android:scaleType="center"
        android:background="@drawable/button_round_blue"
        android:layout_marginLeft="8dp"
        android:visibility="gone"
        android:layout_toRightOf="@id/pdegree"
        android:layout_below="@id/speciality_edit"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:id="@+id/phone_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/degree_tv"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/white_rect"
        android:padding="8dp"
        android:text="Phone Number"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="#000" />
    <TextView
        android:id="@+id/pphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#3ACCE1"
        android:padding="8dp"
        android:maxLines="1"
        android:layout_below="@id/pdegree"
        android:layout_toRightOf="@id/phone_tv"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="#000"
        />

    <ImageView
        android:id="@+id/phone_edit"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:srcCompat="@drawable/ic_edit"
        android:scaleType="center"
        android:background="@drawable/button_round_blue"
        android:layout_marginLeft="8dp"
        android:visibility="gone"
        android:layout_toRightOf="@id/pphone"
        android:layout_below="@id/degree_edit"
        android:layout_marginTop="8dp"
        />
              <TextView
                  android:id="@+id/insurance_tv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/phone_tv"
                  android:layout_marginLeft="8dp"
                  android:layout_marginTop="8dp"
                  android:background="@drawable/white_rect"
                  android:padding="8dp"
                  android:text="Medical insurance"
                  android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                  android:textColor="#000" />
              <TextView
                  android:id="@+id/insur"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="8dp"
                  android:layout_marginRight="16dp"
                  android:background="#3ACCE1"
                  android:padding="8dp"
                  android:maxLines="1"
                  android:ellipsize="end"
                  android:layout_below="@id/pphone"
                  android:layout_toRightOf="@id/insurance_tv"
                  android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                  android:textColor="#000"
                  />

              <ImageView
                  android:id="@+id/insur_edit"
                  android:layout_width="36dp"
                  android:layout_height="36dp"
                  app:srcCompat="@drawable/ic_edit"
                  android:scaleType="center"
                  android:background="@drawable/button_round_blue"
                  android:layout_marginRight="8dp"
                  android:layout_alignParentRight="true"
                  android:layout_below="@id/phone_edit"
                  android:visibility="gone"
                  android:layout_marginTop="8dp"
                  />


          </RelativeLayout>
    </ScrollView>


    <TextView
        android:id="@+id/ptime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="10 min"
        android:visibility="gone"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="#000"

        />

    <EditText
        android:id="@+id/peditbox"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="15dp"
        android:background="@drawable/textboxx"
        android:gravity="start"
        android:hint="What about you"
        android:inputType="text"
        android:maxLines="5"
        android:padding="10dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Add"
        android:visibility="gone"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="#0826e7" />


    <ListView
        android:id="@+id/list_view_booking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:visibility="gone" />


    <ProgressBar
        android:id="@+id/booking_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />


</RelativeLayout>
