<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/splashbackground"
    tools:context="com.example.ahmedmagdy.theclinic.activities.AllDoctorActivity">

    <android.support.v7.widget.SearchView
        android:id="@+id/search_view_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress_bar_note"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:focusable="false"
        app:iconifiedByDefault="false"
        app:queryHint="@string/search" />

    <ProgressBar
        android:id="@+id/progress_bar_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimaryDark"
        android:visibility="gone" />
    <android.support.v7.widget.CardView
        android:id="@+id/card_usss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_below="@+id/search_view_note"
        app:cardUseCompatPadding="true"
        app:contentPadding="10dp">

    <TextView
        android:id="@+id/user_name_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp" />
</android.support.v7.widget.CardView>
    <ListView
        android:id="@+id/list_view_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/card_usss"
        android:layout_marginTop="26dp" />

</RelativeLayout>
